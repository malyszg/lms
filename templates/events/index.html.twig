{% extends 'base.html.twig' %}

{% block title %}Eventy systemowe - LMS{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-journal-text me-2"></i>
                    Eventy systemowe
                </h1>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-funnel me-2"></i>
                        Filtry
                    </h5>
                </div>
                <div class="card-body">
                    {% include 'events/_filters.html.twig' with {'filters': filters} %}
                </div>
            </div>
        </div>
    </div>

    <!-- Events Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-table me-2"></i>
                        Lista eventów
                    </h5>
                    <div class="d-flex gap-2">
                        <select class="form-select form-select-sm" id="items-per-page" 
                                onchange="changeItemsPerPage(this.value, {{ pagination.currentPage }})">
                            <option value="50" {{ pagination.perPage == 50 ? 'selected' : '' }}>50 na stronę</option>
                            <option value="100" {{ pagination.perPage == 100 ? 'selected' : '' }}>100 na stronę</option>
                            <option value="200" {{ pagination.perPage == 200 ? 'selected' : '' }}>200 na stronę</option>
                        </select>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div id="events-table">
                        {% include 'events/_table.html.twig' with {
                            'events': events,
                            'pagination': pagination,
                            'filters': filters
                        } %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function changeItemsPerPage(limit, currentPage) {
    const url = new URL(window.location);
    url.searchParams.set('limit', limit);
    url.searchParams.set('page', currentPage);
    window.location.href = url.toString();
}
</script>
{% endblock %}
