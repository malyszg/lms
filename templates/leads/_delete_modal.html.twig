{# Fluent Design Modal for Lead Deletion Confirmation #}
<div class="fluent-modal-backdrop" id="delete-modal-backdrop"></div>

<div class="fluent-modal" id="deleteModal">
    <div class="fluent-modal-header">
        <div>
            <h2 style="font-size: var(--fluent-font-size-600); font-weight: var(--fluent-font-weight-semibold); margin-bottom: var(--fluent-spacing-xs);">
                <svg width="20" height="20" viewBox="0 0 16 16" fill="var(--fluent-error)" style="margin-right: 8px;">
                    <path d="M8 1c3.86 0 7 3.14 7 7s-3.14 7-7 7-7-3.14-7-7 3.14-7 7-7zm3.5 3.5L10 3 8 5 6 3 4.5 4.5 6.5 6.5 4.5 8.5 6 10l2-2 2 2 1.5-1.5L9.5 6.5l2-2z"/>
                </svg>
                Potwierdź usunięcie leada
            </h2>
            <p style="color: var(--fluent-neutral-foreground-3); font-size: var(--fluent-font-size-200);">
                Czy na pewno chcesz usunąć ten lead?
            </p>
        </div>
        <fluent-button appearance="subtle" id="close-delete-modal-btn">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M8 6.586L5.707 4.293 4.293 5.707 6.586 8l-2.293 2.293 1.414 1.414L8 9.414l2.293 2.293 1.414-1.414L9.414 8l2.293-2.293-1.414-1.414L8 6.586z"/>
            </svg>
        </fluent-button>
    </div>
    
    <div class="fluent-modal-body">
        <div class="fluent-card" style="margin-bottom: var(--fluent-spacing-l);">
            <div style="display: grid; gap: var(--fluent-spacing-m);">
                <div>
                    <strong>UUID:</strong> <code>{{ lead.leadUuid }}</code>
                </div>
                <div>
                    <strong>Klient:</strong> 
                    {% if lead.customer.firstName or lead.customer.lastName %}
                        {{ lead.customer.firstName }} {{ lead.customer.lastName }}
                    {% else %}
                        {{ lead.customer.email }}
                    {% endif %}
                </div>
                <div>
                    <strong>Email:</strong> {{ lead.customer.email }}
                </div>
                <div>
                    <strong>Telefon:</strong> {{ lead.customer.phone }}
                </div>
                <div>
                    <strong>Data utworzenia:</strong> {{ lead.createdAt|date('Y-m-d H:i') }}
                </div>
                <div>
                    <strong>Status:</strong> 
                    <span class="fluent-badge fluent-badge-info">{{ lead.status }}</span>
                </div>
                <div>
                    <strong>Aplikacja:</strong> 
                    <span class="fluent-badge fluent-badge-neutral">{{ lead.applicationName }}</span>
                </div>
            </div>
        </div>
        
        <div class="fluent-message-bar" appearance="error">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" style="margin-right: 8px;">
                <path d="M8 1c3.86 0 7 3.14 7 7s-3.14 7-7 7-7-3.14-7-7 3.14-7 7-7zm1 10V9H7v2h2zm0-3V5H7v3h2z"/>
            </svg>
            <span><strong>Uwaga:</strong> Ta operacja jest nieodwracalna! Lead zostanie trwale usunięty z bazy danych wraz z wszystkimi powiązanymi danymi.</span>
        </div>
    </div>
    
    <div class="fluent-modal-footer">
        <fluent-button appearance="neutral" id="cancel-delete-btn">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" style="margin-right: 4px;">
                <path d="M8 1c3.86 0 7 3.14 7 7s-3.14 7-7 7-7-3.14-7-7 3.14-7 7-7zm3.5 3.5L10 3 8 5 6 3 4.5 4.5 6.5 6.5 4.5 8.5 6 10l2-2 2 2 1.5-1.5L9.5 6.5l2-2z"/>
            </svg>
            Anuluj
        </fluent-button>
        <fluent-button appearance="accent" 
                id="confirmDeleteBtn"
                hx-delete="/api/leads/{{ lead.leadUuid }}"
                hx-indicator="#deleteLoadingSpinner"
                style="background-color: var(--fluent-error); border-color: var(--fluent-error);">
            <span id="deleteLoadingSpinner" class="htmx-indicator">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            </span>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" style="margin-right: 4px;">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>
            Usuń lead
        </fluent-button>
    </div>
</div>

<style>
/* Fluent Design Modal */
.fluent-modal-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 10000;
    animation: fadeIn var(--fluent-duration-normal) var(--fluent-curve-easy-ease);
}

.fluent-modal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 500px;
    max-width: 90vw;
    max-height: 90vh;
    background-color: var(--fluent-neutral-bg-canvas);
    border-radius: var(--fluent-border-radius-large);
    box-shadow: var(--fluent-shadow-28);
    z-index: 10001;
    display: flex;
    flex-direction: column;
    animation: modalSlideIn var(--fluent-duration-normal) var(--fluent-curve-easy-ease);
}

@keyframes modalSlideIn {
    from {
        transform: translate(-50%, -50%) scale(0.9);
        opacity: 0;
    }
    to {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
    }
}

@keyframes modalSlideOut {
    from {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
    }
    to {
        transform: translate(-50%, -50%) scale(0.9);
        opacity: 0;
    }
}

@keyframes fadeOut {
    from { opacity: 1; }
    to { opacity: 0; }
}

.fluent-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: var(--fluent-spacing-l);
    border-bottom: 1px solid var(--fluent-neutral-stroke-divider);
}

.fluent-modal-body {
    padding: var(--fluent-spacing-l);
    flex: 1;
    overflow-y: auto;
}

.fluent-modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: var(--fluent-spacing-m);
    padding: var(--fluent-spacing-l);
    border-top: 1px solid var(--fluent-neutral-stroke-divider);
}

@media (max-width: 768px) {
    .fluent-modal {
        width: 95vw;
        margin: var(--fluent-spacing-m);
    }
}
</style>
